max_clients	4;

error_page	413	/error_pages/413.html;

cgi {
	.php	/usr/bin/php-cgi;
	.py	/usr/bin/python3;
	.pl	/usr/bin/perl;
	.rb	/usr/bin/ruby;
}

server {
	listen	8080;
	host	127.0.0.1;
	server_name	www.luca.com;
	root	/var/www;
	error_page	404	/error_pages/404.html;
	error_page	500	/error_pages/500.html;
	index	index.html;
	upload_dir	upload/;
	methods	GET, POST, DELETE;

	location /[
		methods GET;
	]

	location /put_test/[
		root	var/www;
		methods	PUT;
		upload_dir	/put;
	]

	location /post_body/[
		max_body_size	100;
		methods	POST;
	]

	location /directory/[
		root	YoupiBanane;
		methods	GET, POST;
		upload_dir	/cartella;
		cgi	on;
		index	youpi.bad_extension;
	]

	location /uploads/[
		root	var/www;
		methods	GET, POST, DELETE;
		upload_dir	/cartella;
		index	upload.html;
	]

	location /cgi-bin/[
		cgi	on;
		root	/var/www;
		methods	POST, GET, DELETE;
		autoindex	on;
	]

	location /redirect/[
		return	301	http://www.google.com/;
	]

	location /docs/[
		root	/var/www;
		autoindex	on;
		methods	GET;
	]
	
}
