		root	/var/www;
		methods	GET, POST;
		upload_dir	 /.;
		index	upload.html;
	]

	location /cgi-bin/[
		cgi	on;
		root	/var/www;
		methods	POST, GET;
		autoindex	on;
	]

	location /redirect/[
		return	301	http://www.youtube.com/;
	]

	location /docs/[
