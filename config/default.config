max_clients	4;

error_page	413	/error_pages/413.html;

server {
	listen	7070;
	host	127.0.0.1;
	server_name	www.luca.com;
	root	/var/www;
	max_body_size	5000000;
	error_page	404	/error_pages/404.html;
	error_page	500	/error_pages/500.html;
	index	index.html;
	upload_dir	upload/;
	methods	GET, POST, DELETE;

	location /uploads/[
		autoindex	on;
		root	var/www;
		methods	GET, POST, DELETE;
		upload_dir	/cartella;
		index	upload.html;
	]

	location /cgi-bin/[
		cgi	on;
		root	/var/www;
		methods	POST, GET, DELETE;
		autoindex	on;
	]

	location /redirect/[
		return	301	http://www.google.com/;
	]

	location /docs/[
		root	/var/www;
		autoindex	on;
		methods	GET;
	]
}

